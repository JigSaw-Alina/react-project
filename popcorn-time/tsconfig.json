{
  "compilerOptions": {
    // Basic Compilation Options
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking Options
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Path Aliases
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    // Output Configuration
    "outDir": "./dist",
    "sourceMap": true,
    "jsx": "react-jsx",

    // Node.js Config
    "lib": ["ES2023", "DOM"],
    "skipDefaultLibCheck": true,

    // Add this to resolve `process` and other Node globals
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
